# ClearCause Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ===========================================
# Supabase Configuration (Required)
# ===========================================
# Get these from your Supabase project dashboard at https://supabase.com
# Settings > API

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ===========================================
# Application Configuration (Optional)
# ===========================================

VITE_APP_NAME=ClearCause
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Demo Mode - Set to 'false' to use real Supabase backend
VITE_DEMO_MODE=false

# ===========================================
# Feature Flags (Optional)
# ===========================================

VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_REAL_TIME=true

# ===========================================
# File Upload Limits (Optional)
# ===========================================
# Sizes in bytes

VITE_MAX_FILE_SIZE=10485760
VITE_MAX_IMAGE_SIZE=5242880

# ===========================================
# API Configuration (Optional)
# ===========================================

VITE_API_TIMEOUT=60000
VITE_API_RETRY_ATTEMPTS=5

# ===========================================
# Development Settings (Optional)
# ===========================================

VITE_DEBUG_MODE=true

# ===========================================
# Payment Gateway Configuration (Required for Donations)
# ===========================================
# PayMongo integration for GCash, PayMaya, Cards, and Bank Transfers
# Get your API keys from https://dashboard.paymongo.com/developers/api-keys

# PayMongo API Keys
VITE_PAYMONGO_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
PAYMONGO_SECRET_KEY=sk_test_xxxxxxxxxxxxx

# Payment Mode (sandbox or live)
VITE_PAYMENT_MODE=sandbox

# App URLs for payment callbacks
# IMPORTANT: Update these URLs based on your deployment environment
# Local development
VITE_APP_URL=http://localhost:5173
VITE_API_URL=https://your-project-id.supabase.co/functions/v1

# Production (uncomment when deploying)
# VITE_APP_URL=https://your-domain.com
# VITE_API_URL=https://your-project-id.supabase.co/functions/v1
