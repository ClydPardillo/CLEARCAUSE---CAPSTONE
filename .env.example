# ClearCause Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ===========================================
# Supabase Configuration (Required)
# ===========================================
# Get these from your Supabase project dashboard at https://supabase.com
# Settings > API

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ===========================================
# Application Configuration (Optional)
# ===========================================

VITE_APP_NAME=ClearCause
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Demo Mode - Set to 'false' to use real Supabase backend
VITE_DEMO_MODE=false

# ===========================================
# Feature Flags (Optional)
# ===========================================

VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_REAL_TIME=true

# ===========================================
# File Upload Limits (Optional)
# ===========================================
# Sizes in bytes

VITE_MAX_FILE_SIZE=10485760
VITE_MAX_IMAGE_SIZE=5242880

# ===========================================
# API Configuration (Optional)
# ===========================================

VITE_API_TIMEOUT=60000
VITE_API_RETRY_ATTEMPTS=5

# ===========================================
# Development Settings (Optional)
# ===========================================

VITE_DEBUG_MODE=true

# ===========================================
# Payment Gateway Configuration (Future)
# ===========================================
# Uncomment and fill these when implementing payment integration

# PayMongo (Recommended for Philippines)
# VITE_PAYMONGO_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
# PAYMONGO_SECRET_KEY=sk_test_xxxxxxxxxxxxx
# PAYMONGO_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Payment Mode
# VITE_PAYMENT_MODE=sandbox

# App URLs for payment callbacks
# VITE_APP_URL=http://localhost:5173
# VITE_API_URL=https://your-project.supabase.co/functions/v1
